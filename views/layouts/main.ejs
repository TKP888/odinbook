<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"
    />
    <meta name="user-id" content="<%= user ? user.id : '' %>" />
    <title><%= title %> - OdinBook</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
    <link href="/css/unified.css" rel="stylesheet" />
  </head>
  <body>
    <!-- Header -->
    <header class="main-header">
      <div class="header-container">
        <div class="header-left">
          <a href="/dashboard" class="logo"> OdinBook </a>

          <nav>
            <ul class="nav-menu">
              <li class="nav-item">
                <a
                  href="/dashboard"
                  class="nav-link <%= typeof activePage !== 'undefined' && activePage === 'dashboard' ? 'active' : '' %>"
                >
                  <!-- <i class="fas fa-home"></i> -->
                  <span class="d-none d-md-inline">Home</span>
                </a>
              </li>
              <li class="nav-item">
                <a
                  href="/profile"
                  class="nav-link <%= typeof activePage !== 'undefined' && activePage === 'profile' ? 'active' : '' %>"
                >
                  <!-- <i class="fas fa-user"></i> -->
                  <span class="d-none d-md-inline">Profile</span>
                </a>
              </li>
              <li class="nav-item">
                <a
                  href="/friends/users"
                  class="nav-link <%= typeof activePage !== 'undefined' && activePage === 'users' ? 'active' : '' %>"
                >
                  <span class="d-none d-md-inline">Users</span>
                </a>
              </li>
            </ul>
          </nav>
        </div>

        <!-- Search Bar -->
        <div class="header-search">
          <div class="search-container">
            <div class="input-group input-group-rounded">
              <input
                type="text"
                class="form-control search-input"
                id="headerSearchInput"
                placeholder="Search users..."
                autocomplete="off"
              />
            </div>
            <!-- Search Results Dropdown -->
            <div
              id="headerSearchResults"
              class="search-results-dropdown d-none"
            >
              <div id="headerUsersList"></div>
              <div
                id="headerNoResults"
                class="text-center text-muted p-3 d-none"
              >
                <i class="fas fa-search fa-lg mb-2"></i>
                <p class="mb-0">No users found</p>
              </div>
              <div id="headerSearchLoading" class="text-center p-3 d-none">
                <div
                  class="spinner-border spinner-border-sm text-primary"
                  role="status"
                >
                  <span class="visually-hidden">Loading...</span>
                </div>
                <span class="ms-2">Searching...</span>
              </div>
            </div>
          </div>
        </div>

        <div class="header-right">
          <!-- Friend Requests Dropdown -->
          <div class="friend-requests dropdown me-3">
            <button
              class="btn btn-purple dropdown-toggle"
              type="button"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            >
              <i class="fas fa-user-plus"></i>
              <span id="headerRequestCount" class="badge bg-danger ms-1 d-none"
                >0</span
              >
            </button>
            <ul class="dropdown-menu dropdown-menu-end" id="headerRequestsList">
              <li class="dropdown-item text-center text-muted p-3">
                <i class="fas fa-spinner fa-spin"></i>
                <span class="ms-2">Loading...</span>
              </li>
            </ul>
          </div>

          <!-- Mobile Menu Toggle -->
          <button
            class="mobile-menu-toggle d-md-none"
            type="button"
            aria-label="Toggle mobile menu"
          >
            <i class="fas fa-bars"></i>
          </button>

          <div class="user-menu dropdown d-none d-md-block">
            <div class="user-avatar dropdown-toggle" data-bs-toggle="dropdown">
              <% if (user && user.profilePicture &&
              (user.profilePicture.startsWith('http') ||
              user.profilePicture.startsWith('/uploads/') ||
              user.profilePicture.includes('cloudinary.com'))) { %>
              <img
                src="<%= user.profilePicture %>"
                alt="Profile Picture"
                class="profile-image"
              />
              <% } else { %> <%= user && user.firstName ?
              user.firstName.charAt(0) : '' %><%= user && user.lastName ?
              user.lastName.charAt(0) : '' %> <% } %>
            </div>
            <ul class="dropdown-menu dropdown-menu-end">
              <li>
                <a class="dropdown-item" href="/profile">
                  <i class="fas fa-user"></i>
                  My Profile
                </a>
              </li>

              <li>
                <a class="dropdown-item" href="/friends/users?tab=friends">
                  <i class="fas fa-user-friends"></i>
                  My Friends
                </a>
              </li>
              <li><hr class="dropdown-divider" /></li>
              <li>
                <a class="dropdown-item" href="/auth/logout">
                  <i class="fas fa-sign-out-alt"></i>
                  Logout
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </header>

    <!-- Mobile Navigation Overlay -->
    <div class="mobile-nav-overlay" id="mobileNavOverlay">
      <div class="mobile-nav-menu">
        <div class="mobile-nav-header">
          <button
            class="mobile-nav-close"
            onclick="closeMobileNav()"
            aria-label="Close mobile menu"
          >
            <i class="fas fa-times"></i>
          </button>
          <div class="mobile-nav-user">
            <div class="user-avatar">
              <% if (user && user.profilePicture &&
              (user.profilePicture.startsWith('http') ||
              user.profilePicture.startsWith('/uploads/') ||
              user.profilePicture.includes('cloudinary.com'))) { %>
              <img
                src="<%= user.profilePicture %>"
                alt="Profile Picture"
                class="profile-image"
              />
              <% } else { %> <%= user && user.firstName ?
              user.firstName.charAt(0) : '' %><%= user && user.lastName ?
              user.lastName.charAt(0) : '' %> <% } %>
            </div>
            <div class="mobile-nav-user-info">
              <h6><%= user ? user.firstName + ' ' + user.lastName : '' %></h6>
              <p>@<%= user ? user.username : '' %></p>
            </div>
          </div>

          <!-- Mobile Search Bar -->
          <div class="mobile-search-container mt-3">
            <div class="search-container">
              <div class="input-group input-group-rounded">
                <input
                  type="text"
                  class="form-control search-input"
                  id="mobileSearchInput"
                  placeholder="Search users..."
                  autocomplete="off"
                />
              </div>
              <!-- Search Results Dropdown -->
              <div
                id="mobileSearchResults"
                class="search-results-dropdown d-none"
              >
                <div id="mobileUsersList"></div>
                <div
                  id="mobileNoResults"
                  class="text-center text-muted p-3 d-none"
                >
                  <i class="fas fa-search fa-lg mb-2"></i>
                  <p class="mb-0">No users found</p>
                </div>
                <div id="mobileSearchLoading" class="text-center p-3 d-none">
                  <div
                    class="spinner-border spinner-border-sm text-primary"
                    role="status"
                  >
                    <span class="visually-hidden">Loading...</span>
                  </div>
                  <span class="ms-2">Searching...</span>
                </div>
              </div>
            </div>
          </div>
        </div>
        <ul class="mobile-nav-list">
          <li class="mobile-nav-item">
            <a
              href="/dashboard"
              class="mobile-nav-link <%= typeof activePage !== 'undefined' && activePage === 'dashboard' ? 'active' : '' %>"
              onclick="closeMobileNav()"
            >
              <i class="fas fa-home"></i>
              <span>Home</span>
            </a>
          </li>
          <li class="mobile-nav-item">
            <a
              href="/profile"
              class="mobile-nav-link <%= typeof activePage !== 'undefined' && activePage === 'profile' ? 'active' : '' %>"
              onclick="closeMobileNav()"
            >
              <i class="fas fa-user"></i>
              <span>Profile</span>
            </a>
          </li>
          <li class="mobile-nav-item">
            <a
              href="/friends/users"
              class="mobile-nav-link <%= typeof activePage !== 'undefined' && activePage === 'users' ? 'active' : '' %>"
              onclick="closeMobileNav()"
            >
              <i class="fas fa-users"></i>
              <span>Users</span>
            </a>
          </li>
          <li class="mobile-nav-item">
            <a
              href="/friends/users?tab=friends"
              class="mobile-nav-link"
              onclick="closeMobileNav()"
            >
              <i class="fas fa-user-friends"></i>
              <span>My Friends</span>
            </a>
          </li>
          <li class="mobile-nav-item">
            <a
              href="/auth/logout"
              class="mobile-nav-link"
              onclick="closeMobileNav()"
            >
              <i class="fas fa-sign-out-alt"></i>
              <span>Logout</span>
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Main Content -->
    <main class="main-content">
      <!-- Flash Messages -->
      <% if(success_msg != '') { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= success_msg %>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"
        ></button>
      </div>
      <% } %> <% if(error_msg != '') { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= error_msg %>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"
        ></button>
      </div>
      <% } %> <% if(error != '') { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= error %>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"
        ></button>
      </div>
      <% } %> <%- body %>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/crypto-js/4.1.1/crypto-js.min.js"></script>
    <script src="/js/header.js"></script>
  </body>
</html>
