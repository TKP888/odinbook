<div class="container-fluid">
  <div class="row">
    <!-- Messages Header -->
    <div class="col-12 mb-4">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0"><i class="fas fa-comments"></i> Messages</h5>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <h6>Start a Conversation</h6>
              <p class="text-muted">Send messages to your friends</p>
              <button class="btn btn-primary">New Message</button>
            </div>
            <div class="col-md-6">
              <h6>Recent Conversations</h6>
              <p class="text-muted">Continue your ongoing chats</p>
              <button class="btn btn-outline-primary">View All</button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Conversations List -->
    <div class="col-md-4 mb-4">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">Conversations</h5>
        </div>
        <div class="card-body">
          <div class="text-center text-muted py-4">
            <i class="fas fa-comments fa-3x mb-3"></i>
            <p>No conversations yet.</p>
            <p class="small">Start messaging your friends!</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Message Area -->
    <div class="col-md-8 mb-4">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">Select a conversation</h5>
        </div>
        <div class="card-body">
          <div class="text-center text-muted py-5">
            <i class="fas fa-comment fa-3x mb-3"></i>
            <p>Choose a conversation to start messaging</p>
            <p class="small">Your messages will appear here</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
