  aria-hidden="true"
>
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="viewAllFriendsModalLabel">
          <i class="fas fa-users me-2"></i>All Friends (<%= friends.length %>)
