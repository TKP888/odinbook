<%# Header Component - Usage: include('../partials/header', { showSearch: true,
showFriendRequests: true, showUserMenu: true, activePage: 'dashboard' }) %>

<header class="main-header">
  <div class="header-container">
    <div class="header-left">
      <a href="/dashboard" class="logo">OdinBook</a>

      <nav>
        <ul class="nav-menu">
          <li class="nav-item">
            <a
              href="/dashboard"
              class="nav-link <%= activePage === 'dashboard' ? 'active' : '' %>"
            >
              <span>Home</span>
            </a>
          </li>
          <li class="nav-item">
            <a
              href="/profile"
              class="nav-link <%= activePage === 'profile' ? 'active' : '' %>"
            >
              <span>Profile</span>
            </a>
          </li>
          <li class="nav-item">
            <a
              href="/friends/users"
              class="nav-link <%= activePage === 'users' ? 'active' : '' %>"
            >
              <span>Users</span>
            </a>
          </li>
        </ul>
      </nav>
    </div>

    <%# Search Bar %> <% if (showSearch) { %>
    <div class="header-search">
      <div class="search-container">
        <div class="input-group input-group-rounded">
          <input
            type="text"
            class="form-control search-input"
            id="headerSearchInput"
            placeholder="Search users..."
            autocomplete="off"
          />
        </div>
        <!-- Search Results Dropdown -->
        <div id="headerSearchResults" class="search-results-dropdown d-none">
          <div id="headerUsersList"></div>
          <div id="headerNoResults" class="text-center text-muted p-3 d-none">
            <i class="fas fa-search fa-lg mb-2"></i>
            <p class="mb-0">No users found</p>
          </div>
          <div id="headerSearchLoading" class="text-center p-3 d-none">
            <div
              class="spinner-border spinner-border-sm text-primary"
              role="status"
            >
              <span class="visually-hidden">Loading...</span>
            </div>
            <span class="ms-2">Searching...</span>
          </div>
        </div>
      </div>
    </div>
    <% } %>

    <div class="header-right">
      <%# Friend Requests Dropdown %> <% if (showFriendRequests) { %>
      <div class="friend-requests dropdown me-3">
        <button
          class="btn btn-purple dropdown-toggle"
          type="button"
          data-bs-toggle="dropdown"
          aria-expanded="false"
        >
          <i class="fas fa-user-plus"></i>
          <span id="headerRequestCount" class="badge bg-danger ms-1 d-none"
            >0</span
          >
        </button>
        <ul class="dropdown-menu dropdown-menu-end" id="headerRequestsList">
          <li class="dropdown-item text-center text-muted p-3">
            <i class="fas fa-spinner fa-spin"></i>
            <span class="ms-2">Loading...</span>
          </li>
        </ul>
      </div>
      <% } %> <%# User Menu %> <% if (showUserMenu) { %>
      <div class="user-menu dropdown">
        <div class="user-avatar dropdown-toggle" data-bs-toggle="dropdown">
          <%- include('user-avatar', { user: user, size: 'medium' }) %>
        </div>
        <ul class="dropdown-menu dropdown-menu-end">
          <li>
            <a class="dropdown-item" href="/profile">
              <i class="fas fa-user"></i>
              My Profile
            </a>
          </li>
          <li>
            <a
              class="dropdown-item"
              href="/friends/users"
              onclick="sessionStorage.setItem('preferredTab', 'friends')"
            >
              <i class="fas fa-user-friends"></i>
              My Friends
            </a>
          </li>
          <li><hr class="dropdown-divider" /></li>
          <li>
            <a class="dropdown-item" href="/auth/logout">
              <i class="fas fa-sign-out-alt"></i>
              Logout
            </a>
          </li>
        </ul>
      </div>
      <% } %>

      <!-- Mobile Hamburger Menu Button -->
      <button
        class="hamburger-menu d-md-none"
        id="hamburgerMenuBtn"
        aria-label="Toggle mobile menu"
      >
        <div class="hamburger-line"></div>
        <div class="hamburger-line"></div>
        <div class="hamburger-line"></div>
      </button>
    </div>
  </div>
</header>

<!-- Mobile Menu Overlay -->
<div class="mobile-menu-overlay" id="mobileMenuOverlay"></div>

<!-- Mobile Menu Panel -->
<div class="mobile-menu-panel" id="mobileMenuPanel">
  <div class="mobile-menu-header">
    <div class="d-flex align-items-center">
      <div class="mobile-user-avatar me-3">
        <%- include('user-avatar', { user: user, size: 'medium' }) %>
      </div>
      <div class="mobile-user-info">
        <div class="mobile-user-name">
          <%= user ? user.firstName : 'Guest' %> <%= user ? user.lastName :
          'User' %>
        </div>
        <div class="mobile-user-handle">
          @<%= user ? user.username : 'guest' %>
        </div>
      </div>
    </div>
  </div>

  <!-- Mobile Search Bar -->
  <div class="mobile-menu-search">
    <div class="input-group">
      <input
        type="text"
        class="form-control"
        id="mobileSearchInput"
        placeholder="Search by name, username, or email..."
        autocomplete="off"
      />
    </div>
    <!-- Mobile Search Results -->
    <div id="mobileSearchResults" class="mobile-search-results d-none">
      <div id="mobileUsersList"></div>
      <div id="mobileNoResults" class="text-center text-muted p-3 d-none">
        <i class="fas fa-search fa-lg mb-2"></i>
        <p class="mb-0">No users found</p>
      </div>
      <div id="mobileSearchLoading" class="text-center p-3 d-none">
        <div
          class="spinner-border spinner-border-sm text-primary"
          role="status"
        >
          <span class="visually-hidden">Loading...</span>
        </div>
        <span class="ms-2">Searching...</span>
      </div>
    </div>
  </div>

  <a
    href="/dashboard"
    class="mobile-menu-item <%= activePage === 'dashboard' ? 'active' : '' %>"
  >
    <i class="fas fa-home"></i>
    Home
  </a>

  <a
    href="/profile"
    class="mobile-menu-item <%= activePage === 'profile' ? 'active' : '' %>"
  >
    <i class="fas fa-user"></i>
    Profile
  </a>

  <a
    href="/friends/users"
    class="mobile-menu-item <%= activePage === 'users' ? 'active' : '' %>"
  >
    <i class="fas fa-users"></i>
    Users
  </a>

  <% if (showFriendRequests) { %>
  <a
    href="/friends/users?tab=requests"
    class="mobile-menu-item <%= activePage === 'users' && typeof tab !== 'undefined' && tab === 'requests' ? 'active' : '' %>"
  >
    <i class="fas fa-user-plus"></i>
    Friend Requests
  </a>
  <% } %>

  <a
    href="/friends/users"
    class="mobile-menu-item <%= activePage === 'users' && typeof tab !== 'undefined' && tab === 'friends' ? 'active' : '' %>"
    onclick="sessionStorage.setItem('preferredTab', 'friends')"
  >
    <i class="fas fa-user-friends"></i>
    My Friends
  </a>

  <a href="/auth/logout" class="mobile-menu-item">
    <i class="fas fa-sign-out-alt"></i>
    Logout
  </a>
</div>
