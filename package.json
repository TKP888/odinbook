{
  "name": "odinbook",
  "version": "2.0.0",
  "description": "A social media clone built with Node.js, Express, EJS, and PostgreSQL - Reorganized for better maintainability",
  "main": "src/app.js",
  "scripts": {
    "start": "node --no-deprecation src/app.js",
    "dev": "nodemon --no-deprecation src/app.js",
    "build": "npm run lint && npm run test",
    "lint": "eslint src/",
    "test": "jest",
    "test:all": "node tests/run-all-tests.js",
    "test:user": "node tests/test-user.js",
    "test:friends": "node tests/test-friendships.js",
    "test:posts": "node tests/test-post-visibility.js",
    "test:db": "node tests/test-db.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:migrate": "prisma migrate dev",
    "db:seed": "node prisma/seed.js",
    "reorganize": "node scripts/reorganize.js",
    "clean": "node scripts/cleanup.js",
    "status": "node scripts/check-status.js",
    "start:script": "./scripts/start.sh"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "keywords": [
    "social-media",
    "express",
    "ejs",
    "passport",
    "prisma",
    "modular",
    "organized",
    "enterprise"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@faker-js/faker": "^9.9.0",
    "@prisma/client": "^5.0.0",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.7.0",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-ejs-layouts": "^2.5.1",
    "express-flash": "^0.0.2",
    "express-session": "^1.18.2",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "prisma": "^5.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "eslint": "^8.0.0",
    "jest": "^29.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}